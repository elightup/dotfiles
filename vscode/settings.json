{
	"telemetry.telemetryLevel": "off", // Disable telemetry

	// General
	"update.showReleaseNotes": false, // Do not show release notes after updating
	"window.zoomLevel": 0,
	"security.workspace.trust.untrustedFiles": "open",
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"workbench.colorTheme": "Night Owl",
	"workbench.startupEditor": "none",
	"window.confirmSaveUntitledWorkspace": false,

	// UI: Minimal
	// "workbench.statusBar.visible": false,
	"workbench.activityBar.location": "top",
	"breadcrumbs.enabled": false,
	"breadcrumbs.filePath": "off",
	"editor.minimap.enabled": false,
	"editor.lineNumbers": "off",
	"editor.matchBrackets": "near",
	// "editor.folding": false,
	"editor.renderLineHighlight": "none",
	"editor.scrollbar.vertical": "hidden",
	"editor.scrollbar.horizontal": "hidden",
	"editor.overviewRulerBorder": false, // remove border from overview ruler (located on the right, same position as the scrollbar)
	"editor.hideCursorInOverviewRuler": true, // hide cursor mark in the overview ruler
	"editor.glyphMargin": false, // remove the space used mainly for debugging indicators
	"editor.guides.indentation": false, // hide indent guides
	"files.simpleDialog.enable": true, // minimal UI for open files/folder with Cmd+Oo

	// UI: Sidebar
	"workbench.sideBar.location": "right",
	"workbench.tree.indent": 16,

	// Terminal
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.defaultProfile.windows": "Git Bash",

	// Editor
	"files.autoSave": "afterDelay",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"editor.wordSeparators": "`~!@%^&*()=+[{]}\\|;:'\",.<>/?",

	// Font
	"editor.fontFamily": "Fira Code",
	"editor.fontLigatures": true,
	"editor.fontSize": 18,
	"editor.lineHeight": 1.8,

	// Format
	"files.eol": "\n",
	"files.trimTrailingWhitespace": true,
	"editor.insertSpaces": false,
	"editor.showUnused": true,


	"workbench.editorAssociations": {
		"*.svg": "default"
	},

	// HTML
	"html.format.wrapLineLength": 0,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features",
	},

	// PHP
	"[php]": {
		"editor.defaultFormatter": "DEVSENSE.phptools-vscode"
	},
	"php.format.codeStyle": "WordPress",
	"php.workspace.includePath": "/Users/rilwis/sites/wp/",

	// SCSS
	"[scss]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},

	// JavaScript, Typescript, JSON, JSX
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features",
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "explicit"
	},
	"javascript.preferences.importModuleSpecifier": "relative",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.validate.enable": false,
	"javascript.suggest.autoImports": true,
	"javascript.suggestionActions.enabled": true,
	"javascript.format.semicolons": "insert",
	"javascript.format.insertSpaceAfterCommaDelimiter": true,
	"javascript.format.insertSpaceBeforeAndAfterBinaryOperators": true,
	"javascript.format.insertSpaceAfterKeywordsInControlFlowStatements": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,

	// Git
	"git.enableSmartCommit": true,
	"git.confirmSync": false,
	"git.replaceTagsWhenPull": true,
	"git.openRepositoryInParentFolders": "never",
	"diffEditor.ignoreTrimWhitespace": true,
	"diffEditor.maxComputationTime": 0,

	"githubPullRequests.pullBranch": "never",
	"githubPullRequests.pushBranch": "always",
	"githubPullRequests.createOnPublishBranch": "never",

	// Gitlens
	"gitlens.views.commits.showBranchComparison": false,
	"gitlens.views.commits.pullRequests.enabled": false,
	"gitlens.hovers.currentLine.over": "line",

	"tailwindCSS.includeLanguages": {
		"php": "html"
	},
}